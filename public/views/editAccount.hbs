    <section>
        <div class="edit__green-box"></div>
        <form id="edit_account" class="edit__account">
            <h2>
                Edit Account
            </h2>
            <div class="text_avatar">Avatar</div>
            <div class="avatar">
                <div class="avatar_default"></div>
                <div class="form__button edit_avatar">
                    <button id="btn-upload" class="button_upload button_green">Upload</button>
                    <button id="btn-remove" class="button_remove button_black">Remove</button>
                </div>
            </div>
            <!-- <div class="input_boxs"> -->
                <div class="inputbox">
                    <input class="form__input" id="name_edit" type="text" required>
                    <!-- placeholder="Enter name..." -->
                    <label for="name_edit">Full name</label>
                </div>
                <div class="inputbox">
                    <input class="form__input" id="login_edit" type="text" required>
                    <!-- placeholder="Enter login..." -->
                    <label for="login_edit">Login</label>
                </div>
            <!-- </div> -->
            <div class="form__button">
                <button id= "btn-cancel" class="button_cancel button_black">Cancel</button>
                <button id="btn-green" class="button_save button_green">Save</button>
            </div>
        </form>
    </section>
</body>